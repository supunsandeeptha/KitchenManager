<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.changed.supun.kitchenmanager">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.changed.supun.kitchenmanager.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.changed.supun.kitchenmanager.RegisterProducts" />
        <activity android:name="com.changed.supun.kitchenmanager.DisplayProducts.DisplayProducts" />
        <activity android:name="com.changed.supun.kitchenmanager.Availability.Availability" />
        <activity android:name="com.changed.supun.kitchenmanager.EditProducts.EditProducts" />
        <activity android:name="com.changed.supun.kitchenmanager.Search.Search" />
        <activity android:name="com.changed.supun.kitchenmanager.Recipies.Recipies" />
        <activity android:name="com.changed.supun.kitchenmanager.EditProducts.Edit_Infomation">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name="com.changed.supun.kitchenmanager.ReadMe"></activity>
    </application>

</manifest>